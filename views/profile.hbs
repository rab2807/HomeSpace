<div class="container main">
    <div class="row mt-1">
        <div class="col px-4">
            <div>
                <img src="/images/dumb.jpg" class="rounded float-left" style="height: 200px; width: 200px;">
            </div>
            <div>
                <div>{{type}}</div>
                <div>
                    <h2>{{name}}</h2>
                </div>
                <div>
                    {{catagory}} <br>
                    currently lives in {{location}} <br>
                    Contact via: <br>
                    &emsp; Email: {{email}} <br>
                    &emsp; Phone: {{phone}} <br>
                </div>
                <div>
                    <label for="house-menu">
                        owns {{house_num}} house
                    </label>
                    <a href="#">
                        <button>See the houses</button>
                    </a>
                </div>
                <div>successfully rented {{tenant_num}} tenants</div>
            </div>
        </div>
        <div class="col">
            <div>
                {{>ratingCard}}
            </div>
            <div>
                {{>post-comment}}
                <div style="width: 37rem; height: 300px; overflow-y:scroll;">
                    {{>read-comment}}
                </div>
            </div>
        </div>
    </div>
</div>